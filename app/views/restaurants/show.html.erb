<h1><strong><%= @restaurant.name %></strong></h1>
<p><%= @restaurant.category %></p>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><strong>Reviews down below:</strong></p>
<ul>
  <% @restaurant.reviews.each do |review| %>
    <li>
      <p><%= review.rating %> - <%= review.content %></p>
    </li>
  <% end %>
</ul>
<p><%= link_to "go back to all restaurants", restaurants_path %></p>
<p><%= link_to "add new review", new_restaurant_review_path(@restaurant) %></p>

